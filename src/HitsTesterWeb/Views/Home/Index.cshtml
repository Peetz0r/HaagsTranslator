@{
    ViewData["Title"] = "Home Page";
}

@model HitsTesterWeb.ViewModels.TestPageViewModel

<div>
    <h1>Haags Hitstester</h1>

    <form asp-controller="Home" asp-action="IndexPost" class="pure-form pure-form-stacked">
        <fieldset>
        <div class="pure-g">
            <div class="pure-u-1 pure-u-md-1-1">
                <label for="Text">Tekst</label>
                <textarea name="Text" class="pure-input-1">@Model?.Text</textarea>
            </div>
        </div>
        </fieldset>
        <button type="submit" class="pure-button pure-button-primary">Vertaal</button>
    </form>
    
    @if (Model != null)
    {
        <p>@Model.TranslatedText</p>

        <table class="pure-table">
            <tbody>
                @foreach (var hit in Model.Hits)
                {
                    <tr>
                        <td>@hit</td>
                    </tr>
                }
            </tbody>
        </table>
    }
 </div>
